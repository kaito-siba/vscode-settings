{
  "files.autoSave": "off",
  // ===== General =====
  "editor.wordSeparators": "./\\()\"'-:,.;<>~!@#$%^&*|+=[]{}`~?　、。「」【】『』（）！？てにをはがのともへでや",
  "git.confirmSync": false,
  "editor.fontSize": 14,
  "editor.fontFamily": "'UDEV Gothic 35JPDOC', 'HackGenNerd Console'",
  "editor.tabSize": 2,
  "editor.renderWhitespace": "all",
  "workbench.iconTheme": "catppuccin-latte",
  "icontheme.lightIconTheme": "catppuccin-latte",
  "icontheme.darkIconTheme": "catppuccin-mocha",
  "editor.minimap.enabled": false,
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.fontFamily": "MesloLGS Nerd Font Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.scrollback": 999999,
  "git.autofetch": true,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "json.schemas": [],
  "editor.unicodeHighlight.allowedCharacters": {
    "　": true
  },
  "files.trimTrailingWhitespace": true,
  "diffEditor.ignoreTrimWhitespace": true,
  "gitlens.views.commitDetails.files.layout": "tree",
  "editor.guides.bracketPairs": true,
  "workbench.preferredLightColorTheme": "Catppuccin Latte",
  "workbench.preferredDarkColorTheme": "Catppuccin Mocha",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "window.commandCenter": false,
  "editor.accessibilitySupport": "off",
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "window.autoDetectColorScheme": true,

  // ===== Mac =====
  "terminal.external.osxExec": "Warp.app",

  // ===== Windows =====
  "explorer.confirmDelete": false,
  "terminal.integrated.profiles.windows": {
    "GitBash": {
      "path": ["C:\\Users\rkv_r\\scoop\\apps\\git\\current\\git-bash.exe"],
      "icon": "terminal-bash",
      "args": ["-l"]
    }
  },
  "terminal.integrated.defaultProfile.windows": "GitBash",

  // ===== cSpell =====
  "cSpell.userWords": [
    "BSON",
    "Doshisha",
    "ellipsize",
    "gradio",
    "Medicaroid",
    "NOTEARS",
    "positionals",
    "Swiper",
    "tanstack",
    "toastify",
    "Todos",
    "typeorm"
  ],

  // ===== Jupyter Notebook =====
  "workbench.editorAssociations": {
    "*.out": "default",
    "*.ipynb": "jupyter-notebook",
    "*.pdf": "latex-workshop-pdf-hook"
  },
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },

  // ===== LiveServer =====
  "liveServer.settings.donotShowInfoMsg": true,

  // ===== ESLint =====
  "eslint.validate": [
    "javascript",
    "typescriptreact",
    "javascript",
    "typescriptreact"
  ],

  // ===== Markdown =====
  "markdown-preview-enhanced.hideDefaultVSCodeMarkdownPreviewButtons": false,

  // ===== React =====
  "reactSnippets.settings.importReactOnTop": false,
  "reactSnippets.settings.typescriptPropsStatePrefix": "interface",

  // ===== Python =====
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },

  // ===== Draw.io =====
  "hediet.vscode-drawio.resizeImages": null,

  // ===== Project Manager =====
  "projectManager.tags": ["Personal", "Work", "Univ"],

  // ===== PHP =====
  "intelephense.environment.phpVersion": "8.2.7",

  // ===== SQL =====
  "[sql]": {
    "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
  },

  // ===== Remote SSH =====
  "remote.autoForwardPortsSource": "hybrid",

  "window.zoomLevel": 0.1,
  "cursor.cpp.disabledLanguages": ["plaintext", "markdown", "scminput"],
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "workbench.tree.enableStickyScroll": true,
  "svg.preview.mode": "svg",
  "files.autoGuessEncoding": true,
  "git.suggestSmartCommit": false,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "prettier.useEditorConfig": false,
  "githubPullRequests.pullBranch": "never",
  "diffEditor.renderSideBySide": false,

  // vim
  // 行を折り返しする(マウスを使わないため)
  "editor.wordWrap": "on",
  // sync os clipboard
  "vim.useSystemClipboard": true,
  "vim.leader": "<space>",
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.surround": true,
  // c-p vdcode file検索を優先
  // c-f vdcode grepを優先(ctrl+fをgrepにしているため)
  "vim.handleKeys": {
    "<C-p>": false,
    "<C-f>": false
  },
  "vim.normalModeKeyBindings": [],
  "vim.normalModeKeyBindingsNonRecursive": [
    // ctrl + jkhl で window focus移動
    {
      "before": ["<C-h>"],
      "after": ["<C-w>", "h"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<C-w>", "j"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<C-w>", "k"]
    },
    {
      "before": ["<C-l>"],
      "after": ["<C-w>", "l"]
    },
    // shift + HL(左右) で buffer(file) 移動
    {
      "before": ["H"],
      "after": ["g", "T"]
    },
    {
      "before": ["L"],
      "after": ["g", "t"]
    },
    // vscode undo redoにvim undo redoをbind
    {
      "before": ["u"],
      "commands": ["undo"]
    },
    {
      "before": ["<C-r>"],
      "commands": ["redo"]
    },
    {
      "before": ["<C-n>"],
      "after": ["g", "b"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "f", "g"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<leader>", "g"],
      "commands": ["lazygit.openLazygit"]
    },
    {
      "before": ["<CR>"],
      "commands": ["editor.action.smartSelect.expand"]
    },
    {
      "before": ["<S-CR>"],
      "commands": ["editor.action.smartSelect.shrink"]
    },
    {
      "before": ["<Leader>", "c"],
      "commands": [{ "command": "editor.action.commentLine" }]
    },
    // 削除時にyankさせない
    {
      "before": ["x"],
      "after": ["\"", "_", "x"]
    },
    {
      "before": ["s"],
      "commands": [{ "command": "findJump.activate" }]
    },
    {
      "before": ["<leader>", "x"],
      "commands": [{ "command": "editor.action.codeAction" }]
    },
    {
      "before": ["<leader>", "d"],
      "commands": [{ "command": "workbench.actions.view.toggleProblems" }]
    },
    {
      "before": ["<leader>", "e"],
      "commands": [
        {
          "command": "workbench.view.explorer"
        }
      ]
    }
  ],
  // jk で insertを抜ける jjは邪道
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["p"],
      "after": ["\"", "_", "d", "P"]
    },
    {
      "before": ["<C-n>"],
      "after": ["g", "b"]
    },
    {
      "before": ["<CR>"],
      "commands": ["editor.action.smartSelect.expand"]
    },
    {
      "before": ["<S-CR>"],
      "commands": ["editor.action.smartSelect.shrink"]
    },
    {
      "before": ["<Leader>", "c"],
      "commands": [{ "command": "editor.action.commentLine" }]
    },
    // 削除時にyankさせない
    {
      "before": ["x"],
      "after": ["\"", "_", "x"]
    },
    {
      "before": ["s"],
      "after": ["\"", "_", "s"]
    },
    {
      "before": ["<C-a>"],
      "commands": [{ "command": "incrementor.incrementByOne" }]
    },
    {
      "before": ["<C-x>"],
      "commands": [{ "command": "incrementor.decrementByOne" }]
    }
  ],
  // minimarp 非表示(スプリットしたとき邪魔)
  "editor.minimap.renderCharacters": false,
  // relative number表示
  "editor.lineNumbers": "relative",
  "window.titleBarStyle": "custom",
  // scrollbar非表示（マウス使わないため）
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "workbench.editor.enablePreview": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.editor.wrapTabs": true,
  "search.mode": "reuseEditor",
  "workbench.statusBar.visible": true,
  "workbench.layoutControl.enabled": false,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.shellIntegration.enabled": false,
  "cursor.cmdk.useThemedDiffBackground": false,
